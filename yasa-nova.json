    }

    .socials {
      display: flex;
      gap: 1.2rem;
      margin-top: 1.5rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .socials a {
      text-decoration: none;
      color: #fff;
      background: #7a00cc;
      padding: 0.6rem 1rem;
      border-radius: 8px;
      transition: background 0.3s, transform 0.2s;
    }

    .socials a:hover {
      background: #ff66cc;
      transform: scale(1.05);
    }

    form {
      margin-top: 2rem;
      background: rgba(255, 255, 255, 0.05);
      padding: 1.5rem;
      border-radius: 12px;
      backdrop-filter: blur(4px);
      width: 100%;
      max-width: 400px;
    }

    textarea {
      width: 100%;
      height: 120px;
      border: none;
      border-radius: 8px;
      padding: 0.8rem;
      resize: none;
      font-size: 1rem;
    }

    button {
      margin-top: 1rem;
      padding: 0.6rem 1.2rem;
      background: #ff66cc;
      border: none;
      border-radius: 8px;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    button:hover {
      background: #cc3399;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes pulse {
      0%, 100% { box-shadow: 0 0 25px #ff66cc; }
      50% { box-shadow: 0 0 50px #ff66cc; }
    }
  </style>
