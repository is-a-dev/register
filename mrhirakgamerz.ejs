            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: linear-gradient(to bottom, #1a1a1a, #0d0d0d);
            overflow: hidden;
        }
        
        .block {
            position: absolute;
            width: 64px;
            height: 64px;
            background-size: cover;
            opacity: 0.1;
            animation: float 15s infinite linear;
        }
        
        @keyframes float {
